" indentation settings
set autoindent
set shiftround
set shiftwidth=4
set smarttab
set tabstop=4

" find settings
set hlsearch
set ignorecase
set smartcase

" text rendering settings
set linebreak
set wrap
set encoding=utf-8
syntax on

" UI settings
set laststatus=2
set ruler
set wildmenu
set cursorline
set number
set relativenumber
set title
